<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OgameMobileProject"
             x:Class="OgameMobileProject.MainPage">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Server" />
        <Entry Text="VEGA" IsEnabled="False" />
        <Label Text="Username (email)" />
        <Entry x:Name="UsernameEntry" Placeholder="Commodore Cetus" />
        <Label Text="Password" />
        <Entry x:Name="PasswordEntry" IsPassword="True" />
        <Button Text="Login" Clicked="LoginButton_Clicked" />
    </StackLayout>
</ContentPage>
